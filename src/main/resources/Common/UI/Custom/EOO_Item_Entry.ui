$Common = "Common.ui";

Group #Entry {
    Background: (Color: #1a1a2e);
    Anchor: (Width: 460, Bottom: 6);
    LayoutMode: Top;
    Padding: (Full: 10);

    Label #ItemName {
        Style: (FontSize: 16, TextColor: #ffffff, RenderBold: true);
        Text: "Item Name [Lv. 1]";
    }

    Label #XpInfo {
        Style: (FontSize: 13, TextColor: #88ccff);
        Anchor: (Top: 2);
        Text: "XP: 0 / 100 (0%)";
    }

    Label #Effects {
        Style: (FontSize: 12, TextColor: #88ff88);
        Anchor: (Top: 2);
        Text: "Effects: None";
    }

    Label #Location {
        Style: (FontSize: 11, TextColor: #666666);
        Anchor: (Top: 2);
        Text: "Location: Hotbar slot 1";
    }
}
