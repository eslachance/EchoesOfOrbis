$Common = "Common.ui";

@ToggleOnStyle = TextButtonStyle(
  Default: (Background: #1a3d2e, LabelStyle: (FontSize: 12, TextColor: #4aff7f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2a4d3e, LabelStyle: (FontSize: 12, TextColor: #6aff9f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #0a2d1e, LabelStyle: (FontSize: 12, TextColor: #4aff7f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@ToggleOffStyle = TextButtonStyle(
  Default: (Background: #3d1a1a, LabelStyle: (FontSize: 12, TextColor: #ff4a4a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4d2a2a, LabelStyle: (FontSize: 12, TextColor: #ff6a6a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2d0a0a, LabelStyle: (FontSize: 12, TextColor: #ff4a4a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 14, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@AddUpgradeButtonStyle = TextButtonStyle(
  Default: (Background: #1a3d2e, LabelStyle: (FontSize: 12, TextColor: #4aff7f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2a4d3e, LabelStyle: (FontSize: 12, TextColor: #6aff9f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #0a2d1e, LabelStyle: (FontSize: 12, TextColor: #4aff7f, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@LabelStyle = (FontSize: 13, TextColor: #96a9be);
@DescriptionStyle = (FontSize: 11, TextColor: #666666);

Group {
    LayoutMode: Center;

    Group #DebugPanel {
        Background: $Common.@InputBoxBackground;
        Anchor: (Width: 500, Height: 700);
        LayoutMode: Top;
        Padding: (Full: 20);

        Label #Title {
            Style: (FontSize: 20, Alignment: Center, TextColor: #ffaa4a, RenderBold: true);
            Text: "[DEBUG] Effect Editor";
        }

        Label #WeaponName {
            Style: (FontSize: 16, Alignment: Center, TextColor: #ffffff, RenderBold: true);
            Anchor: (Top: 8);
            Text: "Weapon Name [Lv. 5]";
        }

        Label #CategoryInfo {
            Style: (FontSize: 12, Alignment: Center, TextColor: #888888);
            Anchor: (Top: 4);
            Text: "Category: Physical | Showing applicable effects";
        }

        Group { Anchor: (Height: 1, Top: 12); Background: #2b3542; }

        Group { Anchor: (Height: 8); }

        Group #EffectsListContainer {
            Anchor: (Top: 8);
            FlexWeight: 1;
            LayoutMode: TopScrolling;
            Padding: (Right: 8);
            ScrollbarStyle: $Common.@DefaultScrollbarStyle;

            Group #EffectsList {
                LayoutMode: Top;
            }
        }

        Group { Anchor: (Height: 16); }

        Group {
            LayoutMode: Left;
            Anchor: (Height: 40);

            Group { FlexWeight: 1; }

            TextButton #CloseButton {
                Text: "CLOSE";
                Anchor: (Width: 120, Height: 36);
                Style: @CloseButtonStyle;
            }

            Group { FlexWeight: 1; }
        }
    }
}
