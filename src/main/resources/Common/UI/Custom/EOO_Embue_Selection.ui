$Common = "Common.ui";

@OptionButtonStyle = TextButtonStyle(
  Default: (Background: #2a2a4e, LabelStyle: (FontSize: 14, TextColor: #88ff88, RenderBold: true)),
  Hovered: (Background: #3a3a6e, LabelStyle: (FontSize: 14, TextColor: #aaffaa, RenderBold: true)),
  Pressed: (Background: #1a1a3e, LabelStyle: (FontSize: 14, TextColor: #88ff88, RenderBold: true))
);

@CancelButtonStyle = TextButtonStyle(
  Default: (Background: #3d1a1a, LabelStyle: (FontSize: 14, TextColor: #ff6666, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4d2a2a, LabelStyle: (FontSize: 14, TextColor: #ff8888, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2d0a0a, LabelStyle: (FontSize: 14, TextColor: #ff6666, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
    LayoutMode: Center;

    Group #SelectionPanel {
        Background: $Common.@InputBoxBackground;
        Anchor: (Width: 400, Height: 500);
        LayoutMode: Top;
        Padding: (Full: 15);

        Label #WeaponName {
            Style: (FontSize: 18, Alignment: Center, TextColor: #ffffff, RenderBold: true);
            Anchor: (Top: 10);
            Text: "Weapon Name [Lv. 5]";
        }

        Label #Title {
            Style: (FontSize: 16, Alignment: Center, TextColor: #e0c070);
            Anchor: (Top: 10);
            Text: "Choose an Embue";
        }

        Label #Description {
            Style: (FontSize: 12, Alignment: Center, TextColor: #888888);
            Anchor: (Top: 5);
            Text: "Select a bonus effect for your weapon";
        }

        Group #OptionsContainer {
            Anchor: (Width: 370, Top: 15);
            LayoutMode: Top;

            Button #Option1 {
                Background: (Color: #2a2a4e);
                Anchor: (Width: 370, Height: 80, Bottom: 8);
                LayoutMode: Top;
                Padding: (Full: 10);

                Label #Option1Name {
                    Style: (FontSize: 14, TextColor: #88ff88, RenderBold: true);
                    Text: "Effect Name";
                }

                Label #Option1Value {
                    Style: (FontSize: 12, TextColor: #ffcc00);
                    Anchor: (Top: 2);
                    Text: "Current Value: 10%";
                }

                Label #Option1Desc {
                    Style: (FontSize: 11, TextColor: #aaaaaa);
                    Anchor: (Top: 2);
                    Text: "Effect description goes here";
                }
            }

            Button #Option2 {
                Background: (Color: #2a2a4e);
                Anchor: (Width: 370, Height: 80, Bottom: 8);
                LayoutMode: Top;
                Padding: (Full: 10);

                Label #Option2Name {
                    Style: (FontSize: 14, TextColor: #88ff88, RenderBold: true);
                    Text: "Effect Name";
                }

                Label #Option2Value {
                    Style: (FontSize: 12, TextColor: #ffcc00);
                    Anchor: (Top: 2);
                    Text: "Current Value: 10%";
                }

                Label #Option2Desc {
                    Style: (FontSize: 11, TextColor: #aaaaaa);
                    Anchor: (Top: 2);
                    Text: "Effect description goes here";
                }
            }

            Button #Option3 {
                Background: (Color: #2a2a4e);
                Anchor: (Width: 370, Height: 80, Bottom: 8);
                LayoutMode: Top;
                Padding: (Full: 10);

                Label #Option3Name {
                    Style: (FontSize: 14, TextColor: #88ff88, RenderBold: true);
                    Text: "Effect Name";
                }

                Label #Option3Value {
                    Style: (FontSize: 12, TextColor: #ffcc00);
                    Anchor: (Top: 2);
                    Text: "Current Value: 10%";
                }

                Label #Option3Desc {
                    Style: (FontSize: 11, TextColor: #aaaaaa);
                    Anchor: (Top: 2);
                    Text: "Effect description goes here";
                }
            }
        }

        Group { Anchor: (Height: 15); }

        TextButton #CancelButton {
            Text: "Cancel";
            Anchor: (Width: 120, Height: 36);
            Style: @CancelButtonStyle;
        }
    }
}
