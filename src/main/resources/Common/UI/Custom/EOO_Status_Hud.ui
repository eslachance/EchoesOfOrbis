Group {
    // Container at bottom center, above hotbar
    Anchor: (Left: 0, Right: 0, Bottom: 5, Height: 25);
    LayoutMode: Center;
    
    Group #XpBarContainer {
        Anchor: (Width: 400, Height: 25);
        
        // Background - dark gray border
        Group {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #272F40; // Very dark gray border
        }
        
        // Fill Container (Insets for border effect)
        Group {
             Anchor: (Left: 2, Right: 2, Top: 2, Bottom: 2);
             
             // Dark background (empty bar)
             Group {
                 Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                 Background: #161F2B; // Dark gray background
             }
             
             // The Fill Bar (Width controlled by Java) - Teal/cyan progress
             Group #XpFill {
                 Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 0);
                 Background:#4a618f; // Dark teal/cyan fill
             }
        }
        
        // Text Overlay
        Label #XpText {
            Text: "0/0 (0%)";
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Style: (FontSize: 14, TextColor:#bed2e7, Alignment: Center, VerticalAlignment: Center);
        }
    }
}
